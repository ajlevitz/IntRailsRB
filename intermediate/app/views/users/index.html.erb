<h1>All the message board's authors</h1>

<table class="table table-striped" style="width:450px">
  <tr>
    <th>Author</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to 'View their posts', user_path(user) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'All posts', posts_path %> 
